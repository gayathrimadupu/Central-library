<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
    <Dialog
        id="idCreateBookDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Edit A Book"
    >
        <beginButton>
            <Button
                id="idUpdateBooks"
                text="Update"
                press="onUpdateBook"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelBookButton"
                text="Cancel"
                press="onCloseUpdateDialog"
                type="Negative"
            />
        </endButton>
        <content>
            <form:SimpleForm
                id="idEmployeeDetailsForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <Label
                    id="idISBNLabel"
                    text="ISBN"
                />
                <Input
                    id="idISBNInput"
                    value="{newBookModel>/ISBN}"
                />
                <Label
                    id="idBooktitleLabel"
                    text="Book title"
                />
                <Input
                    id="idBooktitleInput"
                    value="{newBookModel>/title}"
                />
                <Label
                    id="idAuthorNameLabel"
                    text="Author Name"
                />
                <Input
                    id="idAuthorNameInput"
                    value="{newBookModel>/author}"
                />
                <Label
                    id="idGenreLabel"
                    text="Genre"
                />
                <Input
                    id="idGenreInput"
                    value="{newBookModel>/genre}"
                />
                <Label
                    id="idQuantityLabel"
                    text="Quantity"
                />
                <Input
                    id="idQuantityInput"
                    value="{newBookModel>/quantity}"
                />
                   <!-- <Label
                    id="idStatusLabel"
                    text="Status"
                />
                <Input
                    id="idStatusInput"
                    value="{newBookModel>/status}"
                /> -->
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
 
