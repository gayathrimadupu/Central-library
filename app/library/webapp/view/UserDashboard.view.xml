<mvc:View
    controllerName="com.app.library.controller.UserDashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:m="sap.m"
    xmlns:f="sap.f"
>

<Page id="userDashboardPage" title="User Dashboard">
<Button
                        id="idBtnCreate"
                       text="All books"
                        tooltip="To check all books"
                        type="Success"
                       press="onAllbooksPress"
                    />
                    <m:Table
                                id="idUserActiveLoanTable"
                                mode="MultiSelect"
                                alternateRowColors="true"
                               items="{/Books}"
                            >
                                <m:headerToolbar>
                                    <m:OverflowToolbar
                                        id="idBooksTableHeaderUserLoans"
                                    >
                                       
                                        <m:ToolbarSpacer
                                            id="idTableHeaderSpacerUserLoans"
                                        />
                                        <!-- <m:Button
                                            id="idBtnNewBook"
                                            text="New Book"
                                            icon="sap-icon://add"
                                            tooltip="Borrow New Book"
                                            type="Success"
                                            press="onBorrowNewBookPress"
                                        />
                                        <m:Button
                                            id="idBtnReturn"
                                            press="onReturnBookPress"
                                            icon="sap-icon://delete"
                                            tooltip="Return Book"
                                            text="Return Book"
                                            type="Negative"
                                        /> -->
                                    </m:OverflowToolbar>
                                </m:headerToolbar>
                                <m:columns>
                                    <m:Column id="idBookNameColUserLoans">
                                        <m:Title
                                            id="idBookNameColTitleUserLoans"
                                            text="Book Name"
                                        />
                                    </m:Column>
                                    <m:Column id="idAuthorColUserLoans">
                                        <m:Title
                                            id="idAuthorColTitleUserLoans"
                                            text="Author"
                                        />
                                    </m:Column>
                                    <m:Column id="idISBNColUserLoans">
                                        <m:Title
                                            id="idISBNColTitleUserLoans"
                                            text="ISBN"
                                        />
                                    </m:Column>
                                    <m:Column id="idDueDateColUserLoans">
                                        <m:Title
                                            id="idDueDateColTitleUserLoans"
                                            text="DueDate"
                                        />
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem
                                        id="idBooksTableColListItemUserLoans"
                                        type="Navigation"
                                       
                                    >
                                        <m:cells>
                                            <m:Text
                                                id="idBookNameColValueUserLoans"
                                                text="{title}"
                                            />
                                            <m:Text
                                                id="idAuthorColValueUserLoans"
                                                text="{author}"
                                            />
                                            <m:Text
                                                id="idISBNColValueUserLoans"
                                                text="{ISBN}"
                                            />
                                            <m:Text
                                                id="idDueDateValueUserLoans"
                                                text="{users/ID}"
                                            />
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                    
                     </Page>
                     
</mvc:View>
   