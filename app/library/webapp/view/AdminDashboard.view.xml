                    </f:DynamicPageHeader>
        <Table
            id="idBooksTable"
            mode="MultiSelect"
            alternateRowColors="true"
            items="{path: '/Books', parameters :{
                $count : true
            }}"
            selectionChange="onSelectBook"
        >
             <headerToolbar>
                <OverflowToolbar id="adminGenOverflowToolbar1" >
                    <Title id="adminGenTitle2"
                        
                        text="{/Books/$count} Books"
                    />
                    <ToolbarSpacer id="adminGenToolbarSpacer1" />
                    <Button
                        id="idBtnCreate"
                        icon="sap-icon://add"
                        tooltip="Create Book"
                        type="Success"
                        press="onCreateBtnPress"
                    />
                    <Button
                            id="idBtnDelete"
                            icon="sap-icon://delete"
                            tooltip="Delete Book"
                            type="Negative"
                            press="DeleteBook"
                        />
                        <Button
                            id="idBtnEdit"
                            icon="sap-icon://edit"
                            tooltip="Edit Book"
                            type="Emphasized"
                            press="EditBook"
                        />
                    <Button
                        id="BtnCreate"
                        class="loanButton"
                        tooltip="Active loans"
                        type="Success"
                         text="Check Active Loans"
                        press="onCreateActiveloans"
                    />
                    <Button
                        id="idIssueBookStock"
                        text="Issue Books"
                        type="Success"
                        press="onAddNewLoanPress"
                    />
                     
                </OverflowToolbar>
            </headerToolbar>
            <columns>
